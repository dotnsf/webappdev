<html>
<head>
<meta charset="utf8"/>
<title><%= title %></title>
<script type="text/javascript" src="http://code.jquery.com/jquery-git.js"></script>
<script type="text/javascript" src="js/my.js"></script>
<link rel="stylesheet" href="css/my.css"/>
</head>
<body>
<div id="datetime"></div>
<form id="form1" method="POST" action="/data">
<table>
<tr><th>国</th><th>首都</th><th>アクション</th></tr>
<% alldata.forEach( function( data ){ %>
<tr><td><%= data.country %></td><td><%= data.capital %></td><td><input type="button" class="editbutton" value="編集" onClick='editData(<%= JSON.stringify( data ) %>)'/><input type="button" class="deletebutton" value="削除" onClick='deleteData("<%= data.country %>")'/></td></tr>
<% }); %>
<tr>
 <td><input type="text" name="country" id="country"/></td>
 <td><input type="text" name="capital" id="capital"/></td>
 <td><input type="submit" class="updatebutton" value="更新"/></td>
</tr>
</table>
</form>
</body>
</html>
